<div class="row">
	<div class="col-12">
		<form action="/Product/Store" method="POST">
			<div class="rounded">
				<label>Name</label>
				<input type="text" name="Name" />
			</div>
			<div>
				<label>Quantity</label>
				<input type="number" name="Quantity" />
			</div>
			<div>
				<label>Price</label>
				<input type="number" name="Price" step="0.01" />
			</div>
			<div>
				<button type="submit">Send</button>
			</div>
		</form>
	</div>
</div>