@model WebApplicationDAL.Models.Product
<div class="row">
	<div class="col-12">       //Store
		<form action="/Product/Update" method="POST">
			<input type="hidden"name="id"value="@Model.Id"/>//Sazdava se pri update
			<div>
				<label>Name</label>
				<input type="text" name="Name" value="@Model.Name"/>
			</div>
			<div>
				<label>Quantity</label>
				<input type="number" name="Quantity"value="@Model.Quantity" />
			</div>
			<div>
				<label>Price</label>
				<input type="number" name="Price" step="0.01"value="@Model.Price" />
			</div>
			<div>
				<button type="submit">Send</button>
			</div>
		</form>
	</div>
</div>



